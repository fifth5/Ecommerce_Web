<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<package name="demo" extends="struts-default">
		<action name="showDemo" class="com.ecom.demo.controller.DemoAction" method="showDemo">
			<result>jsp/demo/demo.jsp</result>
		</action>
		<action name="insertDemo" class = "com.ecom.demo.controller.DemoAction" method="insertDemo">
			<result>jsp/demo/demo.jsp</result>
		</action>
	</package>
	
	<package name="book" extends="struts-default,json-default">
	
		<!-- author  modules -->
		<action name="entryAuthor" class="com.ecom.book.controller.AuthorAction" method="entryAuthor">
			<result>../book/author.jsp</result>
		</action>
		
		<action name="loadAuthor" class="com.ecom.book.controller.AuthorAction" method="loadAuthor">
			<result type="json">
				<param name="root">dataMap</param>
			</result>
		</action>
		
		<action name="saveAuthor" class="com.ecom.book.controller.AuthorAction" method="saveAuthor">
			<result />
		</action>
		
		<action name="editAuthor" class="com.ecom.book.controller.AuthorAction" method="editAuthor">
			<result />		
		</action>
				
		<action name="destroyAuthor" class="com.ecom.book.controller.AuthorAction" method="destroyAuthor">
			<result type="json" />
		</action>
		
				
			
		<!-- publisher modules -->
		<action name="entryPublisher" class="com.ecom.book.controller.PublisherAction" method="entryPublisher">
			<result>../book/publisher.jsp</result>
		</action>	

		<action name="loadPublisher" class="com.ecom.book.controller.PublisherAction" method="loadPublisher">
			<result type="json">
				<param name="root">dataMap</param>
			</result>
		</action>
		
		<action name="savePublisher" class="com.ecom.book.controller.PublisherAction" method="savePublisher">
			<result />
		</action>
		
		<action name="editPublisher" class="com.ecom.book.controller.PublisherAction" method="editPublisher">
			<result />		
		</action>
		
		<action name="destroyPublisher" class="com.ecom.book.controller.PublisherAction" method="destroyPublisher">
			<result type="json" />
		</action>
	</package>
</struts>